server:
    # Level 1 gives operational information.
    verbosity: 1

    do-ip6: <%= @ipv6?'yes':'no' %>

<% if node[:unbound][:dnssec][:enable] %>
    # Ignore the DNSSEC chain of trust for the
    # following domains:
  <% @insecure_domains.each do |domain| -%>
    domain-insecure: "<%= domain %>"
  <%- end -%>
<%- end -%>
<%- unless node[:unbound][:interfaces].nil? -%>
  <% node[:unbound][:interfaces].each do |interface_ip| -%>
    interface: <%= interface_ip %>
  <%- end -%>
<% end %>
<%- if @acls -%>
  <%- @acls.each do |acl| -%>
    access-control: <%= acl['range'] %> <%= acl['action'] %>
  <%- end -%>
<%- end -%>
<%- unless @forwarders.empty? -%>

forward-zone:
    name: "."
  <% @forwarders.each do |srv_ip| -%>
    forward-addr: <%= srv_ip %>
  <%- end %>
<%- end -%>
<%- if @stub_zones -%>
  <%- @stub_zones.each do |name,config| -%>

stub-zone:
    name: "<%= name %>"
    stub-addr: <%= config[:server] %>
  <%- end -%>
<%- end -%>
